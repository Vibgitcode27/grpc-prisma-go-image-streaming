// Laptop model

model Laptop {
    id          String   @unique
    brand       String
    name        String
    cpu         String
    gpu         String
    ram         String
    keyboard    String
    storages    String
    screen      String
    weightKg    Float?
    weightLbs   String?
    priceInr    Float
    releaseYear Int
    updatedAt   DateTime @updatedAt
}
